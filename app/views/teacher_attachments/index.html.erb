<p id="notice"><%= notice %></p>

<h1>Teacher Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_attachments.each do |teacher_attachment| %>
      <tr>
        <td><%= teacher_attachment.teacher_id %></td>
        <td><%= teacher_attachment.avatar %></td>
        <td><%= link_to 'Show', teacher_attachment %></td>
        <td><%= link_to 'Edit', edit_teacher_attachment_path(teacher_attachment) %></td>
        <td><%= link_to 'Destroy', teacher_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

