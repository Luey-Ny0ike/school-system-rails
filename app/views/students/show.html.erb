<p id="notice"><%= notice %></p>

<h2 class="h2 text-primary">Student Details</h2>
<div class="">
<div class="row">
  <div class="col-md-6">

  <p>
    <strong>Student Picture</strong><br>

    <%= image_tag @student.picture_url.to_s, class:"img-thumbnail img-responsive", alt:"...", style:"width:30%; height:50%"%>

  </p>

  <div class="row container">
    <div class="col-md-6">
      <h4 class="text-success">Name: <%= @student.name%></h4>
      <br>
      <h4 class="text-success">Level: <%= @student.stream.level.level%></h4>
      <br>
      <h4 class="text-success">Stream: <%= @student.stream.stream%></h4>
      <br>
      <h4 class="text-success">Fee: <%= @student.fee%></h4>
      <br>
      <h4 class="text-success">Dormitory: <%= @student.dormitory%></h4>
      <br>
      <h4 class="text-success">Clubs: <%= @student.clubs%></h4>
      <br>
      <h4 class='text-success'> Subject Names:
      <%= @student.subjects.map {|c| c.name}.join(', ') %></h4>

    </div>



  </div>
</div>

<div class="container">

 <%= column_chart @student.grades.joins(:subject).group(:name).sum(:score)%>
</div>
<div class="col-md-6">
  <h1>Assignments</h1>
  <% @assignments.each do |assignment| %>
  <%= assignment.assignment_details %>
  <% end %>
</div>
</div>
<%= link_to 'Grades', student_grades_path(@student) %>
<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %> |
