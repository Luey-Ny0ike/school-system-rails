<p id="notice"><%= notice %></p>

<h1>Students</h1>

<div class="">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Stream</th>
      <th>Fee</th>
      <th>Dormitory</th>
      <th>Clubs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.stream.level.level %></td>
        <td><%= student.stream.stream %></td>
        <td><%= student.fee %></td>
        <td><%= student.dormitory %></td>
        <td><%= student.clubs %></td>


        <td><%= link_to 'View student', student, class: "btn btn-info"%>

        </td>
        <td>
          <%= link_to 'Edit',  edit_student_path(student), class: "btn btn-success" %>
        </td>
        <td>
          <%= link_to 'Delete',student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>



