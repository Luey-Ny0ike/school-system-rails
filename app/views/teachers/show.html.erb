<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @teacher.picture_url.to_s, class:"img-thumbnail img-responsive"%>
      <hr>
      <h3>Logged in as:
        <%= @teacher.name%></h3>
      <hr>
      <h5>      <strong>Role:</strong>
            <%= @teacher.role %></h5>
    </div>
    <div class="col-md-9">
      <div class="container-fluid">
        <div class="timetable">
          <img src="http://ac-grenoble.fr/college/grand-champ.pont-de-cheruy/lgc/IMG/png/planning.png?1454837894" class="img-responsive img-thumbnail" alt="" style="width:80%, height:60%">
        </div>
        <hr>
        <div class="container">
          <ul class="nav nav-tabs">
            <li class="active">
              <a data-toggle="tab" href="#students">View students</a>
            </li>
            <li>
              <a data-toggle="tab" href="#grades">Add Grades</a>
            </li>
            <li>
              <a data-toggle="tab" href="#assignments">Add assignments</a>
            </li>
          </ul>

          <div class="tab-content">
            <div id="students" class="tab-pane fade">
              <table class="table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Class</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>

                  <p><% @teacher.subjects.each do |subject| %>
                    <% subject.name%>
                    <% end %>
                  </p>
                  <% @teacher.streams.each do |stream| %>
                  <% stream.level.level %>
                  <% stream.stream %>

                  <% stream.students.each do |student| %>
                  <% student.subjects.each do |s| %>
                  <% @subject.each do |s1| %>
                  <% if s1.id == s.id %>

                  <tr>
                    <td>
                      <%= student.name %>
                    </td>
                    <td><%= student.stream.level.level %>
                      <%= student.stream.stream%>
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                  <% end %>
                  <% end %>
                  <% end %>
                  <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div id="grades" class="tab-pane fade">
              <table class="table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Exam</th>
                    <th>Subject</th>
                    <th>cat 1</th>
                    <th>cat 2</th>
                    <th>cat 3</th>
                    <th>Score</th>
                    <th>Grade</th>
                    <th>Submit</th>
                  </tr>
                </thead>

              <tbody>
                <td><%= @studo%></td>
              <%= render 'grades/form'%>
            </tbody>

            </table>
            </div>
            <div id="assignments" class="tab-pane fade">
              <%= render 'assignments/form'%>
            </div>
            </div>

          </div>
        </div>
      </div>
    </div>
